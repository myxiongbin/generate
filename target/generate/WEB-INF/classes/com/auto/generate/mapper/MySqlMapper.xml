<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.auto.generate.mapper.MySqlMapper" >
	<resultMap id="BaseResultMap" type="com.auto.generate.code.model.Table" >
    	<result column="table_name" property="name" jdbcType="VARCHAR" />
    	<result column="table_comment" property="remark" jdbcType="VARCHAR" />
  	</resultMap>
  	
  	<!-- 查询所有库表  -->
  	<select id="queryAllTableName" resultMap="BaseResultMap" parameterType="java.lang.String" >
    	select 
    		table_name,table_comment
    	from 
    		information_schema.tables 
    	where 
    		table_schema=#{tableSchema,jdbcType=VARCHAR} 
    	and 
    		table_type='base table';
  	</select>
</mapper>
